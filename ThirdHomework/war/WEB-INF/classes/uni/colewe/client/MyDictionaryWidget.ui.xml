<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	.error { background-color: #F75D59; }
	.success { background-color: #57E964; }
	.neutral { background-color: white; }
	</ui:style>
	
	<g:HTMLPanel>
		<div class="w3-container"> 
			<h3>Please enter a query and press the search button</h3>
			
			<div> 
				<g:CheckBox ui:field="chkRev"></g:CheckBox>
				<g:CheckBox ui:field="chkLike"></g:CheckBox>
				<g:CheckBox ui:field="chkHl"></g:CheckBox>
			</div>
			
			<div>
				<g:TextBox ui:field="txtQuery"></g:TextBox>
				<g:Button ui:field="btnSearch"></g:Button>
			</div>
			
			<div>
				<g:Label ui:field="lblResponse"></g:Label>
			</div>
			
			<div style="overflow-y:scroll; height:600px;">
				<g:SimplePanel ui:field="panel"></g:SimplePanel>
			</div>
			
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 